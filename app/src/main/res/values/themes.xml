<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Subtrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="ThemeOverlay.Subtrack.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarStyle">@style/Widget.Material3.MaterialCalendar</item>
        <item name="materialCalendarTheme">@style/CustomDatePickerTheme</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/subtrack_primary</item>
        <item name="colorOnPrimary">@color/subtrack_on_primary</item>
        <item name="colorSurface">@color/subtrack_surface</item>
        <item name="colorOnSurface">@color/subtrack_on_surface</item>
    </style>

</resources>